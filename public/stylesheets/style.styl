*
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    margin 0
    padding 0

html
body
.messages
    width 100%
    height 100%

input_height = 20px

body
    background-color black
    font-family monospace

input
    font-family inherit
    font-size inherit

.messages
    display block
    line-height 1.25em
    padding input_height
    color white

    dt
    dd
        float left

    dt
        color gold
        clear left
        padding-right 0.65em

        &.system
            color white
            
            & + dd
                color red

.send
    position absolute
    bottom 0
    left 0
    border-top 1px solid #CCCCCC

    &
    input
        width 100%

    input
        height input_height
        line-height input_height
        background-color black
        border none
        color white